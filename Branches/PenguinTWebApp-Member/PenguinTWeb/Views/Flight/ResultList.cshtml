    <script>
        var showAll = false;
        function dealModel() {
            var self = this;
            self.records = ko.observableArray([]);
            self.fileterAirlines = ko.observableArray([]);
            self.selectedAirlines = ko.observableArray([]);
            self.filterPrice = ko.observableArray([]);
