@model List<DataModel.SeatMapControl>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Seat Map Control List</h6>
            <a href="@Url.Action("SeatMapDetail", new { id = Guid.Empty })" class=" d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i>
                Create New
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="grid" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th style="width: 20px;">Active</th>
                        <th>Airline Code</th>
                        <th>RBD</th>
                        <th>Original Country Code</th>
                        <th>Destination Country Code</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var seatMap in Model)
                    {
                        <tr>
                            <td>
                                @(seatMap.IsActive.GetValueOrDefault() ? "1" : "2")
                            </td>
                            <td>
                                @seatMap.AirlineCode
                            </td>
                            <td>
                                @seatMap.RBD
                            </td>
                            <td>
                                @seatMap.OriginalCountryCode
                            </td>
                            <td>
                                @seatMap.DestinationCountryCode
                            </td>
                            <td>
                                <a href="@Url.Action("SeatMapDetail", new { id = seatMap.SeatMapOID })">
                                    <i class="fas fa-edit"></i> Edit
                                </a><br />
                            </td>
                            <td>
                                <a href="#" onclick="deleteRow('@seatMap.SeatMapOID', '@seatMap.AirlineCode')"><i class="fas fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        var isSave = '@Request["save"]';
        $(document).ready(function () {
            $('#grid').DataTable({
                columnDefs: [{
                    "orderable": false,
                    "targets": [4]
                }, {
                    "render": function (data, type) {
                        if (type == 'sort') {
                            return data + '';
                        } else {
                            var html = '';
                            if (data == 1) {
                                html = '<i class="fas fa-check" style= "color: #00ff21" ></i>'
                            } else {
                                html = '<i class="fas fa-times" style= "color: #ff0000" ></i>'
                            }
                            return html;
                        }
                    },
                    "targets": [0]
                }]
            });

            if (isSave == 't') {
                new PNotify({
                    title: 'Success',
                    text: 'Data have been updated',
                    type: 'success',
                    styling: 'bootstrap3',
                    delay: 2000,
                    nonblock: {
                        nonblock: true
                    },
                    buttons: {
                        show_on_nonblock: true
                    }
                });
            }
        });

        var deleteRow = function (id, name) {
            if (confirm("Do you want to delete " + name + "?")) {
                window.location.href = '@Url.Action("SeatMapControlDelete")' + '/' + id;
            }
        }
    </script>
}