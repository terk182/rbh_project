@model DataModel.Member
@using (Html.BeginForm("MemberSaveOrUpdate", "Member", FormMethod.Post, new { data_parsley_validate = "", @class = "form-horizontal form-label-left", role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.MemberOID)
    @Html.HiddenFor(x => x.IsDelete)
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-sm-flex align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Member Details</h6>
            </div>
        </div>
        <br /><div class="text-danger" style="font-size:24px;color:red;font-weight:bold; text-align:center; padding-bottom:20px;" id="messe">@TempData["ErrorMessage"]</div>
        <div class="card-body">
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">
                    Active <span class="asterisk">*</span>
                </div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    Disable  @Html.EditorFor(m => m.IsActive, new { required = "required" })  Enable
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">Subscribe Datetime</div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    @Html.DisplayFor(m => m.CreateDateTime, "{0:dd/MM/yyyy HH:mm:ss}", new { @class = "form-control" })
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">Subscribe Datetime</div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    @Html.DisplayFor(m => m.LastUpdate, "{0:dd/MM/yyyy HH:mm:ss}", new { @class = "form-control" })
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">Profile Image</div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    <img src="@Model.ImageProfile" width="70px" />
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">Name</div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    @Model.FirstName @Model.LastName
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">Email</div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    @Html.DisplayFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">Type</div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    @String.Format("{0}", Model.LoginType == "FB" ? "Facebook" : "Gogojii")
                </div>
            </div>
            <div class="card-footer">
                <div class="text-right">
                    <button type="submit" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" id="btn_Save">
                        <i class="fas fa-save fa-sm text-white-50"></i>
                        &nbsp;&nbsp;Save &nbsp;&nbsp;
                    </button>

                    <button type="submit" id="btn_submit" style="display: none;"></button>
                    <a href="@Url.Action("MemberList")" class=" d-sm-inline-block btn btn-sm btn-warning shadow-sm">
                        <i class="fas fa-chevron-circle-left fa-sm text-white-50"></i>
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
}


