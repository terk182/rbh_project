@model DataModel.PromotionGroupCode

@using (Html.BeginForm("PromotionGroupCodeDetailSave", "FlightDiscountTag", FormMethod.Post, new { data_parsley_validate = "", @class = "form-horizontal form-label-left", role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.PromotionGroupCodeOID)
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-sm-flex align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Promotion Group Code Details</h6>
            </div>
        </div>
        <br />
        <div class="text-danger" style="font-size:24px;color:red;font-weight:bold; text-align:center; padding-bottom:20px;" id="messe">@TempData["ErrorMessage"]</div>
        <div class="card-body">
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">
                    Promotion Group Code <span class="asterisk">*</span>
                </div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    @Html.TextBoxFor(x => x.PromotionGroupCode1, new { required = "required", @class = "form-control form-control-sm col-lg-4", @minlength = "2" })
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-lg-2 col-md-6 col-sm-12">
                    Promotion Group Description <span class="asterisk">*</span>
                </div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    @Html.TextAreaFor(m => m.PromotionGroupDescription, new { required = "required", @rows = "10", @class = "form-control form-control-sm col-lg-8" })
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-right">
                <button type="submit" id="submit_handle" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <i class="fas fa-save fa-sm text-white-50"></i>
                    &nbsp;&nbsp;Save &nbsp;&nbsp;
                </button>
                <a class="d-sm-inline-block btn btn-sm btn-warning shadow-sm" href="@Url.Action("PromotionGroupCodeDetail")">
                    <i class="fas fa-chevron-circle-left fa-sm text-white-50"></i>
                    Cancel
                </a>
            </div>
        </div>
    </div>
}
