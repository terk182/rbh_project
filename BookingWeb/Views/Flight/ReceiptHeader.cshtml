@model BL.Entities.RobinhoodFare.AirFare
@{
    Layout = null;
    string URL = System.Configuration.ConfigurationManager.AppSettings["webpages_URL"].ToString();
    System.Globalization.CultureInfo ci = new System.Globalization.CultureInfo(Localize.GetLang().ToLower() == "th" ? "th-TH" : "en-US");
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ReceiptHeader</title>
    <style>
        .container {
            width: 100%;
            margin-right: auto;
            margin-left: auto;
            font-family: Tahoma, sans-serif;
            font-size: 1rem;
            font-weight: 400;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="container">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td style="width:50%"><img src="@URL/mpgogojii/assets/icon/logo.svg" style="width: 310px;" /></td>
                <td style="width:50%;text-align:right">
                    <div style="padding-right: 5px;text-align:right">
                        <div style="border:solid 1px #000;padding:10px 20px;text-align:center;position: relative;float: right;"><strong>ต้นฉบับใบเสร็จรับเงิน/ORIGINAL RECEIPT</strong></div>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <table width="100%" border="0" cellspacing="5" cellpadding="5">
                        <tr>
                            <td>
                                <table width="100%" border="0" cellspacing="5" cellpadding="2">
                                    <tr>
                                        <td width="50%">
                                            <table>
                                                <tr>
                                                    <td colspan="4" style="font-weight:bold;">บริษัท โคแมนชี่ โกโกจิ จำกัด</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">99/100 ซอยงามวงศ์วาน 26 แยก 3 (พงษ์เพชรพัฒนา 2)</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">แขวงทุ่งสองห้อง  เขตหลักสี่  กทม. 10210</td>
                                                </tr>
                                                <tr>
                                                    <td style="width:30px">โทร</td>
                                                    <td style="font-weight:bold;">0 2693 3569</td>
                                                    <td style="width:30px">แฟกซ์</td>
                                                    <td style="font-weight:bold;">0 2693 5977</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">เลขประจำตัวผู้เสียภาษีอากร <span style="font-weight:bold">0105562107863</span></td>
                                                </tr>
                                            </table>
                                        </td>
                                        <td width="50%">
                                            <table>
                                                <tr>
                                                    <td colspan="4" style="font-weight:bold;">Comanche Gogoji Co., Ltd.</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">99/100 Soi Ngam Wong Wan 26, Lane 3 (Phongphet Pattana 2),</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">Thung Song Hong, Lak Si, Bangkok 10210</td>
                                                </tr>
                                                <tr>
                                                    <td style="width:30px">Tel.</td>
                                                    <td style="font-weight:bold;">0 2693 3569</td>
                                                    <td style="width:30px">Fax</td>
                                                    <td style="font-weight:bold;">0 2693 5977</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">Tax id <span style="font-weight:bold">0105562107863</span></td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <table width="100%" border="0" cellspacing="5" cellpadding="5">
                        <tr>
                            <td style="background-color:#ECF2FF;width:70%">
                                <table width="100%" border="0" cellspacing="5" cellpadding="2">
                                    <tr>
                                        <td>@Localize.Show(Model.receipt.ReceiptType == "P" ? "RECEIPT_NAME_RECEIPT" : "RECEIPT_COMPANYNAME_RECEIPT"):</td>
                                        <td style="font-weight:bold">@Model.receipt.Name</td>
                                    </tr>
                                    <tr>
                                        <td>@Localize.Show("RECEIPT_ADDRESS_RECEIPT"):</td>
                                        <td style="font-weight:bold">@Model.receipt.Address</td>
                                    </tr>
                                    <tr>
                                        <td>@Localize.Show("RECEIPT_TAXNO_RECEIPT"):</td>
                                        <td style="font-weight:bold">@Model.receipt.TaxNo</td>
                                    </tr>
                                </table>
                            </td>
                            <td style="background-color:#F4F4F4;width:30%">
                                <table width="100%" border="0" cellspacing="5" cellpadding="2">
                                    <tr>
                                        <td>@Localize.Show("RECEIRT_ORDERNO")</td>
                                        <td style="font-weight:bold">@Model.receipt.ReceiptNo </td>
                                    </tr>
                                    <tr>
                                        <td>@Localize.Show("RECEIRT_DATE")</td>
                                        <td style="font-weight:bold">@Model.receipt.RequestDateTime.Value.ToString("dd-MM-yyyy", ci)</td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <table width="100%" border="0" cellspacing="2" cellpadding="2">
                        <tr>
                            <td>
                                <table width="100%" border="0" cellspacing="0" cellpadding="5" style="background-color:#0394CD;color:#FFF;font-weight:bold;text-align:center;">
                                    <tr>
                                        <td width="10%">ลำดับที่ <br /> Item</td>
                                        <td width="45%">รายการ <br /> Description</td>
                                        <td width="15%">จำนวน <br /> Quantity</td>
                                        <td width="15%">ราคา/หน่วย <br /> Unit price</td>
                                        <td width="15%">จำนวนเงิน <br /> Amount</td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>