@model BL.Entities.NewsAndActivity.AllNewAndActivity
@{
    System.Globalization.CultureInfo ci = new System.Globalization.CultureInfo(Localize.GetLang().ToLower() == "th" ? "th-TH" : "en-US");
    string URL = System.Configuration.ConfigurationManager.AppSettings["admin_URL"].ToString();
}

@section width100head
{
    <div class="hotel-search-box-bg d-none d-md-block">
        <div class="container">
            <div class="font-60">@Model.NewsAndActivityDetails.Find(x => x.LangCode == Localize.GetLang()).Title </div>
            <div class="font-20 mb-3">
                @Model.NewsAndActivityDetails.Find(x => x.LangCode == Localize.GetLang()).ShortDescriptions
            </div>
            <div class="mb-3">@Localize.Show("PostByGogojiiAdmin") - @(Model.NewsAndActivity.UpdateDateTime.Value.ToString("MMMM dd, yyyy HH:mm ", ci))</div>
            @if (Model.NewsAndActivity.BannerName != null && Model.NewsAndActivity.BannerName.Length > 0)
            {
                <img src="@(URL)images/news_activities/@(Model.NewsAndActivity.BannerName)?id=@Guid.NewGuid()" />
            }
            </div>
    </div>
}

