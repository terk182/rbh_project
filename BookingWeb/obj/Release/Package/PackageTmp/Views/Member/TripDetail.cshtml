@model BL.Entities.MyTrip.BookingTransectionElement
@{
    Layout = null;
    long status = 0;
    if (Model.BookingTransection.PnrStatus == 0)
    {
        status = 2;

    }
    else
    {
        status = Model.BookingTransection.PaymentStatus.GetValueOrDefault();
    }
}
<div class="container">
    <div class="row">
        <div class="col-md-3 col-12 font-20">
            <br />
            <strong>@Localize.Show("TRIP_DETAIL")</strong>
        </div>
        <div class="col-md-9 col-12">
            <div class="trip-head-box">
                <ul>
                    <li>
                        <div class="font-16 trip-head-box-text">
                            <strong>@Localize.Show("BOOKING_STATUS" + status.ToString())</strong>
                        </div>
                        <div class="font-12">
                            @Localize.Show("BOOKING_STATUS")
                        </div>
                    </li>
                    <li>
                        <div class="font-16 trip-head-box-text">
                            <strong id="tripPNR">@(Model.BookingTransection.Pnr == "" ? Model.BookingTransection.KiwiRef.ToString() : Model.BookingTransection.Pnr)</strong>
                        </div>
                        <div class="font-12">
                            @Localize.Show("BOOKING_REF")
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3 col-12">
            <strong>@Localize.Show("YOUR_TRIP")</strong>
        </div>
        <div class="col-md-9 col-12 text-right">
            <div style="display: inline-block" class="text-center font-12">
                @if ((bool)ViewBag.showCancel)
                {
                    <img src="~/Images/member/Cancel.png" style="cursor:pointer" onclick="cancelBookingConfirm('@Model.BookingTransection.Pnr', '@Model.BookingTransection.BookingId');" />
                    <br />
                    @Localize.Show("CANCEL_TRIP")
                }
                @if ((bool)ViewBag.showDelete)
                {
                    <img src="~/Images/member/Delete.png" style="cursor:pointer" onclick="deleteBookingConfirm('@Model.BookingTransection.BookingId');" />
                    <br />
                    @Localize.Show("DELETE_TRIP")
                }
            </div>
        </div>
    </div>
    @{

        System.Globalization.CultureInfo ci = new System.Globalization.CultureInfo(Localize.GetLang() == "th" ? "th-TH" : "en-US");
        string clsStr = "";
        switch (Model.BookingFlights[0].CabinClass)
        {
            case "F":
                clsStr = Localize.Show("FIRST");
                break;
            case "C":
                clsStr = Localize.Show("BUSINESS");
                break;
            case "P":
                clsStr = Localize.Show("PREMIUM_ECONOMY");
                break;
            case "Y":
                clsStr = Localize.Show("ECONOMY");
                break;
        }
        string tripType = Model.BookingFlights.Max(x => x.RouteNo) == 2 ? "R" : "O";
        string depCode = Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).FromCity;
        long maxSegment = Model.BookingFlights.Where(x => x.RouteNo == 1).Max(y => y.SegmentNo);
        string arrCode = Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == maxSegment).ToCity;
    }

    <div class="card">
        <div class="card-header">
            <div class="font-24">
                <strong>
                    @ViewBag.naming.namingService.GetAirportName(depCode, false, Localize.GetLang()) (@depCode)
                    @if (tripType == "R")
                    {
                        <img src="~/Images/roundtrip_plane.png" style="vertical-align:middle; max-height: 100%; width: 20px" class="img-fluid" />
                    }
                    else
                    {
                        <img src="~/Images/black_plane.png" style="vertical-align:middle; max-height: 100%; width: 20px" class="img-fluid" />
                    }
                    @ViewBag.naming.namingService.GetAirportName(arrCode, false, Localize.GetLang()) (@arrCode)
                </strong>
            </div>
        </div>
        <div class="card-body">
            <div>
                <strong>@Localize.Show("DEPARTURE_FLIGHT")</strong>
                <i>
                    @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).DepartureDateTime.ToString("dd MMM", ci) @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).DepartureDateTime.ToString("yy")
                </i>
            </div>
            <div class="row">
                <div class="col-lg-4 col-12">
                    <table class="table-flight-info">
                        <tr>
                            <td class="td-flight-info td-flight-info-logo">
                                <img style="vertical-align:middle;" src="//www.plusibe.com/images/airline/logos/@(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).MarketAirline)logo_2.gif" />
                            </td>
                            <td class="td-flight-info td-flight-info-airline">
                                <strong>@(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).MarketAirline) @(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).FlightNo)</strong>
                                <div class="font-14">
                                    @clsStr (@(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).Rbd))
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-lg-6 col-12">
                    <table class="table-flight-info">
                        <tr>
                            <td class="td-flight-info">
                                <strong>
                                    @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).DepartureDateTime.ToString("HH:mm")
                                </strong>
                                <div class="font-14">
                                    @ViewBag.naming.namingService.GetAirportName(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).FromCity, true, Localize.GetLang()).Split(',')[0] (@Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).FromCity)
                                </div>
                            </td>
                            <td class="td-flight-info td-flight-info-plane text-center">
                                <img src="~/Images/black_plane.png" style="vertical-align:middle; max-height: 100%; width: 20px" class="img-fluid" />
                            </td>
                            <td class="td-flight-info">
                                @{
                                    long maxDep = Model.BookingFlights.Where(x => x.RouteNo == 1).Max(y => y.SegmentNo);
                                    DateTime depDepDate = Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).DepartureDateTime.Date;
                                    DateTime depArrDate = Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == maxDep).ArrivalDateTime.Date;
                                    TimeSpan tsDep = depArrDate - depDepDate;
                                }
                                <strong>
                                    @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == maxDep).ArrivalDateTime.ToString("HH:mm")
                                    @if (tsDep.Days > 0)
                                    {
                                        <sup>+@tsDep.Days</sup>
                                    }
                                </strong>
                                <div class="font-14">
                                    @ViewBag.naming.namingService.GetAirportName(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == maxDep).ToCity, true, Localize.GetLang()).Split(',')[0] (@Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == maxDep).ToCity)
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-lg-2 col-12">
                    <table class="table-flight-info">
                        <tr>
                            <td class="td-flight-info text-right">
                                @if (maxDep == 1)
                                {
                                    <strong class="connection-blue-text">
                                        @Localize.Show("DIRECT_FLIGHT")
                                    </strong>
                                }
                                else
                                {
                                    <strong>
                                        @(maxDep - 1) @Localize.Show("STOPS")
                                    </strong>
                                    <div class="font-14 connection-blue-text">
                                        @ViewBag.naming.namingService.GetAirportName(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).ToCity, true, Localize.GetLang()).Split(',')[0] (@Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).ToCity)
                                    </div>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-12"></div>
                <div class="col-lg-8 col-12">
                    <div>
                        <strong>@Localize.Show("TOTAL_TRAVEL_TIME")</strong>
                        @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).Duration.Split(':')[0] @Localize.Show("HRS") @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 1 && x.SegmentNo == 1).Duration.Split(':')[1] @Localize.Show("MINS")
                    </div>
                    @if (!String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").WeightUnits))
                    {
                        <div>
                            <img src="~/Images/icon_web/Bag.png" class="img-fluid" />
                            @Localize.Show("ADULT") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").WeightUnits)

                            @if (Model.BookingTransection.TotalChd > 0 && !String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").WeightUnits))
                            {
                                <span>
                                    |
                                    @Localize.Show("CHILD") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").WeightUnits)
                                </span>
                            }
                            @if (Model.BookingTransection.TotalInf > 0 && !String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").WeightUnits))
                            {
                                <span>
                                    |
                                    @Localize.Show("INFANT") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").WeightUnits)
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-12"></div>
                <div class="col-lg-4 col-12 text-right connection-blue-text">
                    <a href="javascript:showHideFlightDetail('D')" id="showHideD">@Localize.Show("SHOW_FLIGHT_DETIAL")</a>
                </div>
            </div>

            <div style="display: none;" id="D_Detial">
                <table class="table-flight-info">
                    @{
                        var depList = Model.BookingFlights.Where(x => x.RouteNo == 1).OrderBy(y => y.SegmentNo).ToList();
                    }
                    @for (int i = 0; i < depList.Count; i++)
                    {
                        <tr>
                            @if (i == 0)
                            {
                                <td class="timeline-head">
                                    <img src="~/Images/icon_web/timeline-head.png" />
                                </td>
                            }
                            else
                            {
                                <td class="timeline-connection-head">
                                    <img src="~/Images/icon_web/timeline-connection-head.png" />
                                </td>
                            }
                            <td class="font-18 timeline-date">
                                <strong>@depList[i].DepartureDateTime.ToString("ddd dd MMM HH:mm", ci) </strong>
                            </td>
                            <td class="font-18">
                                <strong>
                                    @ViewBag.naming.namingService.GetAirportName(depList[i].FromCity, true, Localize.GetLang())
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="timeline-flight">
                                <img src="~/Images/icon_web/timeline-flight.png" />
                            </td>
                            <td class="font-18 timeline-airline">
                                <strong>
                                    @depList[i].MarketAirline @depList[i].FlightNo
                                </strong>
                            </td>
                            <td class="font-14">
                                <div>
                                    @Aircraft.Show(depList[i].AircraftType)

                                    @if (depList[i].MarketAirline != depList[i].OperateAirline)
                                    {
                                        <i><small>@Localize.Show("OPERATED_BY") <img style="vertical-align:middle;" src="//www.plusibe.com/images/airline/logos/@(depList[i].OperateAirline)logo_2.gif" /></small></i>
                                    }
                                </div>
                                @if (!String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").WeightUnits))
                                {
                                    <div>
                                        <img src="~/Images/icon_web/Bag.png" class="img-fluid" />
                                        @Localize.Show("ADULT") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").WeightUnits)

                                        @if (Model.BookingTransection.TotalChd > 0 && !String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").WeightUnits))
                                        {
                                            <span>
                                                |
                                                @Localize.Show("CHILD") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").WeightUnits)
                                            </span>
                                        }
                                        @if (Model.BookingTransection.TotalInf > 0 && !String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").WeightUnits))
                                        {
                                            <span>
                                                |
                                                @Localize.Show("INFANT") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").WeightUnits)
                                            </span>
                                        }
                                    </div>
                                }
                            </td>
                        </tr>
                        <tr>
                            @if (i == depList.Count - 1)
                            {
                                <td class="timeline-end">
                                    <img src="~/Images/icon_web/timeline-end.png" />
                                </td>
                            }
                            else
                            {
                                <td class="timeline-connection-head">
                                    <img src="~/Images/icon_web/timeline-connection.png" />
                                </td>
                            }
                            <td class="font-18 timeline-date">
                                <strong>@depList[i].ArrivalDateTime.ToString("ddd dd MMM HH:mm", ci) </strong>
                            </td>
                            <td class="font-18">
                                <strong>
                                    @ViewBag.naming.namingService.GetAirportName(depList[i].ToCity, true, Localize.GetLang())
                                </strong>
                            </td>
                        </tr>
                        if (i < depList.Count - 1)
                        {
                            TimeSpan tsConnection = depList[i + 1].DepartureDateTime - depList[i].ArrivalDateTime;
                            <tr>
                                <td class="timeline-connection-head"></td>
                                <td class="timeline-connection-time" colspan="2">
                                    <table>
                                        <tr>
                                            <td style="width: 60px;">
                                                <img src="~/Images/icon_web/Red_clock.png" />
                                            </td>
                                            <td>
                                                <div>
                                                    @Localize.Show("STOPON") @(((tsConnection.Days * 24) + tsConnection.Hours).ToString()) @Localize.Show("HRS") @(tsConnection.Minutes.ToString()) @Localize.Show("MINS")

                                                </div>
                                                <strong>
                                                    @ViewBag.naming.namingService.GetAirportName(depList[i].ToCity, true, Localize.GetLang())
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
            @if (tripType == "R")
            {
                <hr />
                <div>
                    <strong>@Localize.Show("RETURN_FLIGHT")</strong>
                    <i>
                        @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).DepartureDateTime.ToString("dd MMM", ci) @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).DepartureDateTime.ToString("yy")
                    </i>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-12">
                        <table class="table-flight-info">
                            <tr>
                                <td class="td-flight-info td-flight-info-logo">
                                    <img style="vertical-align:middle;" src="//www.plusibe.com/images/airline/logos/@(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).MarketAirline)logo_2.gif" />
                                </td>
                                <td class="td-flight-info td-flight-info-airline">
                                    <strong>@(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).MarketAirline) @(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).FlightNo)</strong>
                                    <div class="font-14">
                                        @clsStr (@(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).Rbd))
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-lg-6 col-12">
                        <table class="table-flight-info">
                            <tr>
                                <td class="td-flight-info">
                                    <strong>
                                        @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).DepartureDateTime.ToString("HH:mm")
                                    </strong>
                                    <div class="font-14">
                                        @ViewBag.naming.namingService.GetAirportName(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).FromCity, true, Localize.GetLang()).Split(',')[0] (@Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).FromCity)
                                    </div>
                                </td>
                                <td class="td-flight-info td-flight-info-plane text-center">
                                    <img src="~/Images/black_plane.png" style="vertical-align:middle; max-height: 100%; width: 20px" class="img-fluid" />
                                </td>
                                <td class="td-flight-info">
                                    @{
                                        long maxArr = Model.BookingFlights.Where(x => x.RouteNo == 2).Max(y => y.SegmentNo);
                                        DateTime arrDepDate = Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).DepartureDateTime.Date;
                                        DateTime arrArrDate = Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == maxArr).ArrivalDateTime.Date;
                                        TimeSpan tsArr = arrArrDate - arrDepDate;
                                    }
                                    <strong>
                                        @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == maxDep).ArrivalDateTime.ToString("HH:mm")
                                        @if (tsDep.Days > 0)
                                        {
                                            <sup>+@tsArr.Days</sup>
                                        }
                                    </strong>
                                    <div class="font-14">
                                        @ViewBag.naming.namingService.GetAirportName(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == maxDep).ToCity, true, Localize.GetLang()).Split(',')[0] (@Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == maxDep).ToCity)
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-lg-2 col-12">
                        <table class="table-flight-info">
                            <tr>
                                <td class="td-flight-info text-right">
                                    @if (maxArr == 1)
                                    {
                                        <strong class="connection-blue-text">
                                            @Localize.Show("DIRECT_FLIGHT")
                                        </strong>
                                    }
                                    else
                                    {
                                        <strong>
                                            @(maxArr - 1) @Localize.Show("STOPS")
                                        </strong>
                                        <div class="font-14 connection-blue-text">
                                            @ViewBag.naming.namingService.GetAirportName(Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).ToCity, true, Localize.GetLang()).Split(',')[0] (@Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).ToCity)
                                        </div>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-12"></div>
                    <div class="col-lg-8 col-12">
                        <div>
                            <strong>@Localize.Show("TOTAL_TRAVEL_TIME")</strong>
                            @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).Duration.Split(':')[0] @Localize.Show("HRS") @Model.BookingFlights.FirstOrDefault(x => x.RouteNo == 2 && x.SegmentNo == 1).Duration.Split(':')[1] @Localize.Show("MINS")
                        </div>
                        @if (!String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").WeightUnits))
                        {
                            <div>
                                <img src="~/Images/icon_web/Bag.png" class="img-fluid" />
                                @Localize.Show("ADULT") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "ADT").WeightUnits)

                                @if (Model.BookingTransection.TotalChd > 0 && !String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").WeightUnits))
                                {
                                    <span>
                                        |
                                        @Localize.Show("CHILD") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "CHD").WeightUnits)
                                    </span>
                                }
                                @if (Model.BookingTransection.TotalInf > 0 && !String.IsNullOrEmpty(Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").WeightUnits))
                                {
                                    <span>
                                        |
                                        @Localize.Show("INFANT") @Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").Weight @Localize.Show("BAGGAAGE_UNIT_" + Model.BookingPaxFares.FirstOrDefault(x => x.PaxType == "INF").WeightUnits)
                                    </span>
                                }
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 col-12"></div>
                    <div class="col-lg-4 col-12 text-right connection-blue-text">
                        <a href="javascript:showHideFlightDetail('R')" id="showHideD">@Localize.Show("SHOW_FLIGHT_DETIAL")</a>
                    </div>
                </div>

                <div style="display: none;" id="R_Detial">
                    <table class="table-flight-info">
                        @{
                            var arrList = Model.BookingFlights.Where(x => x.RouteNo == 2).OrderBy(y => y.SegmentNo).ToList();
                        }
                        @for (int i = 0; i < arrList.Count; i++)
                        {
                            <tr>
                                @if (i == 0)
                                {
                                    <td class="timeline-head">
                                        <img src="~/Images/icon_web/timeline-head.png" />
                                    </td>
                                }
                                else
                                {
                                    <td class="timeline-connection-head">
                                        <img src="~/Images/icon_web/timeline-connection-head.png" />
                                    </td>
                                }
                                <td class="font-18 timeline-date">
                                    <strong>@arrList[i].DepartureDateTime.ToString("ddd dd MMM HH:mm", ci) </strong>
                                </td>
                                <td class="font-18">
                                    <strong>
                                        @ViewBag.naming.namingService.GetAirportName(arrList[i].FromCity, true, Localize.GetLang())
                                    </strong>
                                </td>
                            </tr>
                            <tr>
                                <td class="timeline-flight">
                                    <img src="~/Images/icon_web/timeline-flight.png" />
                                </td>
                                <td class="font-18 timeline-airline">
                                    <strong>
                                        @arrList[i].MarketAirline @arrList[i].FlightNo
                                    </strong>
                                </td>
                                <td class="font-14">
                                    <div>
