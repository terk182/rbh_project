
@{
    Layout = null;
    string URL = System.Configuration.ConfigurationManager.AppSettings["webpages_URL"].ToString();
}
@model DataModel.Member
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ActivateEmail</title>
    <style type="text/css">
       
        .col {
            padding: 47px 95px 45px;
        }
        .text-center {
            text-align: center !important;
        }
       
        .mt-10 {
            margin-top: 10px;
        }
        .text-link{
            color:#06b0f4;
        }
        a.text-link:link{
            color:#06b0f4;
        }
        a.text-link:hover{
            color:#06b0f4;
        }
        a.text-link:visited{
            color:#06b0f4;
        }
        .row .col .logo .logo__image {
            width: 200px;
        }
        @@media(max-width: 767px) {
            .col {
                padding: inherit;
            }
        }
    </style>
</head>
<body>
    <div style='background-color:#ecf2ff; color:#212529; font-family:"Quicksand", "Sarabun", sans-serif; font-size:1rem; font-weight:400; line-height:1.5; margin:0; text-align:left' bgcolor="#ecf2ff" align="left">
        <div style="background-image: url(@(URL)Images/icon_gogo/summary-bg.png), linear-gradient(180deg, rgba(3, 147, 205, 1) 0%, rgba(3, 147, 205, 1) 30%, rgba(236, 242, 255, 1) 30%, rgba(236, 242, 255, 1) 100%);background-position:center;background-repeat:no-repeat;width:100%;padding-top: 20px;padding-bottom: 20px;" width="100%">
            <div style="-ms-flex-direction:column; background-clip:border-box; background-color:#fff; border:none; border-radius:0.25rem;  flex-direction:column; min-width:0; position:relative; word-wrap:break-word; margin-left:auto; margin-right:auto; max-width:630px; margin-bottom:3rem" bgcolor="#ffffff">
                <div style="background-color:#FAA90D; border-bottom:1px solid rgba(0, 0, 0, 0.125); margin-bottom:0; padding:0.75rem 1.25rem; border-radius:calc(0.25rem - 1px) calc(0.25rem - 1px) 0 0; color:#fff" bgcolor="#FAA90D">
                    <div style="-ms-flex-wrap:wrap;  flex-wrap:wrap; margin-left:-15px; margin-right:-15px">
                        <div style="min-height:1px; padding-left:15px; padding-right:15px; position:relative; width:100%; -ms-flex:0 0 50%; flex:0 0 50%; max-width:50%" width="100%">
                            <img src="@(URL)Images/icon_gogo/logo-w-b.png" style="border-style:none; vertical-align:middle" valign="middle">

                        </div>
                    </div>
                </div>
                <div style="-ms-flex:1 1 auto; flex:1 1 auto; padding:1.25rem">
                    <div>
                        <div class="col">
                            <div class="mt-10">
                                <div class="row">
                                    <h3 style="color:#e1b748!important">@Localize.Show("MEMBER_CONFIRMATION")</h3>
                                </div>
                                <div class="row">
                                    @Html.Raw(String.Format("{0}&nbsp;<a class=\"text-link\" href=\"{1}Member/ActivateMember/?id={2}&lang={5}\">{3}</a>&nbsp;{4}", Localize.Show("CONFIRMEMAIL_BEFORE_CLICK"), URL, Model.MemberOID, Localize.Show("CONFIRMEMAIL_CLICK"), Localize.Show("CONFIRMEMAIL_AFTER_CLICK"), Localize.GetLang()))
                                </div>
                            </div>
                            <div class="mt-10">
                                <div class="row">
                                    @Localize.Show("CONFIRMEMAIL_THANK")
                                </div>
                            </div>
                            <div class="mt-10">
                                <div class="row">
                                    @Localize.Show("CONFIRMEMAIL_GOGOJII")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
