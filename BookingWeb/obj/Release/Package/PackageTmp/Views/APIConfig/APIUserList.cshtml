@model List<DataModel.APIUser>
<link href="~/Vendors/Datatable/datatables.min.css" rel="stylesheet" />

<div class="float-right">
    <a href="@Url.Action("APIUserDetail", new { id = Guid.Empty })" class="btn btn-round btn-primary"><i class="fa fa-plus"></i> Add</a>
</div>

<table id="grid" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>WebMode</th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Username</td>
                <td>@s.Password</td>
                <td>@s.WebMode
                </td>
                <td>
                    <a href="#" onclick="@Url.Action("APIUserDetail", new { id = s.APIUserOID })">  Edit</a> | 
                    <a href="#" onclick="deleteRow('@s.APIUserOID')">  Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts
{
    <script src="~/Vendors/Datatable/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#grid').DataTable({
                pageLength: 50
            });

        });

