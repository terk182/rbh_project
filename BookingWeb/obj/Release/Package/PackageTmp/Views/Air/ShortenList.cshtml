@model List<DataModel.ShortenURL>
<link href="~/Vendors/Datatable/datatables.min.css" rel="stylesheet" />
<div>
    <a href="@Url.Action("DeepLinkList","Air")">
        <strong>Deep Link</strong>
    </a> /
        <strong>Shorten URL</strong>
    
</div>
<hr />
<h3>Shorten URL</h3>
<hr />

<div class="float-right">
    <a href="@Url.Action("ShortenDetail","Air")" class="btn btn-round btn-primary"><i class="fa fa-plus"></i> Add</a>
</div>

<table id="grid" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Short URL</th>
            <th>Full URL</th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
            {
            <tr>
                <td>@s.Code</td>
                <td><a href="http://www.penguin.travel/S/U/@s.Code" target="_blank">http://www.penguin.travel/S/U/@s.Code</a></td>
                <td><a href="@s.FullURL" target="_blank">
                        <span style="white-space: nowrap;text-overflow: ellipsis;width: 500px;display: block;overflow: hidden;">
                            @s.FullURL
                        </span>
                    </a></td>
                <td>
                    <a href="#" onclick="deleteRow('@s.Code')">  Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts
{
    <script src="~/Vendors/Datatable/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#grid').DataTable({
                pageLength: 50
            });

        });

        var deleteRow = function (id) {
